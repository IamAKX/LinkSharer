<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context="com.akash.applications.linksharer.MainActivity">
    <HorizontalScrollView
        android:id="@+id/displayHorizontaScroll"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="wrap_content">
        <ScrollView
            android:id="@+id/displayScroll"
            android:layout_weight="2"
            android:background="#000000"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="330dp">

                <TextView
                    android:id="@+id/statusDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:gravity="start"
                    android:textColor="#ffffff"/>

        </ScrollView>
    </HorizontalScrollView>
    <LinearLayout
        android:layout_below="@+id/displayHorizontaScroll"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnStop"
                android:text="stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Vibrate on connection established"
                android:textSize="18sp"/>
            <Switch
                android:id="@+id/connectVibrateSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cdcdcd"/>
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Vibrate on send link"
                android:textSize="18sp"/>
            <Switch
                android:id="@+id/sendVibrateSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
